<div class="container">
  <div class="row">
    <div class="col-md">
      <%= form_tag(cards_path, method: :get) do %>
        <div class="input-group">
          <%= text_field_tag :card, params[:card], {class: 'form-control'} %>
          <div class="input-group-append">
            <%= submit_tag 'Search', {class: 'btn btn-outline-secondary'} %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
